<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Updated JDBC Driver -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        
        <!-- Database connection credentials -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/NoteTaker?useSSL=false</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Shweta@123</property>
        
        <!-- Hibernate dialect for MySQL 5 -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        
        <!-- Show SQL statements in logs -->
        <property name="hibernate.show_sql">true</property>

        <!-- Automatic schema creation -->
        <property name="hibernate.hbm2ddl.auto">create</property>

        <!-- Entity mapping -->
        <mapping class="com.entities.Note"/>
    </session-factory>
</hibernate-configuration>
